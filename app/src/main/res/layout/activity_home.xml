<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@color/white"
    tools:context=".HomeActivity">


    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="-10"
        android:src="@drawable/home_assest1"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/popins"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/popins"
        android:text="Foodie"
        android:textColor="@color/purple_500"
        android:textSize="28sp"
        android:layout_marginLeft="7dp"
        app:layout_constraintStart_toEndOf="@id/textview2"
        app:layout_constraintTop_toTopOf="@id/textview2"
        />
    <TextView
        android:id="@+id/textview4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinslight"
        android:text="Which indian food would you like to cook?"
        android:textColor="#424242"
        android:textSize="17sp"
        android:layout_marginLeft="7dp"
        app:layout_constraintStart_toStartOf="@id/textview2"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        />
    <EditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:background="@drawable/searchview"
        android:fontFamily="@font/poppinslight"
        android:inputType="none"
        android:focusable="false"
        android:hint="Search Recipes"
        android:textSize="17sp"
        android:textColorHint="#5A5858"
        android:paddingStart="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview4"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview4"
        android:src="@drawable/search_ic"/>

    <TextView
        android:id="@+id/textview5"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/popins"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@id/textview2"
        app:layout_constraintTop_toBottomOf="@id/search"
        />
    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/salad"
                android:src="@drawable/category_salad"
                android:background="@drawable/category_card_bc"
                style="@style/my_Style" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_below="@id/salad"
                android:text="Salad"
                android:fontFamily="@font/poppinslight"
                android:layout_alignStart="@id/salad"
                android:layout_alignEnd="@id/salad"
                android:layout_marginStart="17sp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="19dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <ImageView
                android:layout_marginStart="17dp"
                android:id="@+id/maindish"
                android:src="@drawable/drinks"
                android:background="@drawable/category_card_bc"
                android:layout_toEndOf="@id/salad"
                style="@style/my_Style" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_below="@id/maindish"
                android:text="Main"
                android:fontFamily="@font/poppinslight"
                android:layout_alignStart="@id/maindish"
                android:layout_alignEnd="@id/maindish"
                android:layout_marginStart="17sp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="19dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <ImageView
                android:layout_marginStart="17dp"
                android:id="@+id/drinks"
                android:src="@drawable/catergory_drinks"
                android:background="@drawable/category_card_bc"
                android:layout_toEndOf="@id/maindish"
                style="@style/my_Style" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_below="@id/drinks"
                android:text="Drinks "
                android:fontFamily="@font/poppinslight"
                android:layout_alignStart="@id/drinks"
                android:layout_alignEnd="@id/drinks"
                android:layout_marginStart="13sp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="19dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <ImageView
                android:layout_marginStart="17dp"
                android:id="@+id/desserts"
                android:src="@drawable/category_dessert"
                android:background="@drawable/category_card_bc"
                android:layout_toEndOf="@id/drinks"
                style="@style/my_Style" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_below="@id/desserts"
                android:text="Desserts"
                android:fontFamily="@font/poppinslight"
                android:layout_alignStart="@id/desserts"
                android:layout_alignEnd="@id/desserts"
                android:layout_marginStart="8sp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

        </RelativeLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview10"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/popins"
        android:text="Popular Recipe"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/textview5"
        app:layout_constraintTop_toBottomOf="@id/horizontalView"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:id="@+id/recyclerview_popular"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/popular_rv_item"
        app:layout_constraintTop_toBottomOf="@id/textview10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3388221262538162/9114947467">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>